<!DOCTYPE html>
<html lang="sv">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Administrationspanel - Produkter</title>
  <!-- Länk till CSS för administrationen -->
  <link rel="stylesheet" href="/stylesheets/admin.css">
  <!-- Bootstrap CSS för standardknappar och layout -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <div class="container">
      <header>
          <h1>Administration</h1>
      </header>

      <aside class="sidebar">
          <nav>
              <ul>
                  <li><a href="#">Produkter</a></li>
              </ul>
          </nav>
      </aside>

      <form id="addProductForm">
        <input type="text" name="name" placeholder="Produktnamn" required>
        <input type="text" name="sku" placeholder="SKU" required>
        <input type="number" name="price" placeholder="Pris" required>
        <button type="submit">Lägg till produkt</button>
      </form>
      

      <main class="main">
          <section class="product-list">
              <h2>Produkter</h2>
              <div class="button-container">
                  <button id="loadProductsBtn" class="nyprodukt-btn">Ladda produkter</button>
                  <a href="/admin/products/new"><button class="nyprodukt-btn">Ny produkt</button></a>
              </div>
              <table id="productTable" class="table table-striped mt-3">
                  <thead>
                      <tr>
                          <th>Namn</th>
                          <th>SKU</th>
                          <th>Pris</th>
                      </tr>
                  </thead>
                  <tbody id="productTableBody">
                      <!-- Produkter laddas här dynamiskt -->
                  </tbody>
              </table>
          </section>
      </main>
  </div>

  <!-- Klient-side JavaScript för att hämta och lägga till produkter -->
  <script src="/stylesheets/admin.js"></script>
</body>
</html>
